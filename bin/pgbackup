#!/bin/bash

echo 'Backing up to file...'
ssh -i /home/pablo/.ssh/ubuntu.pem ubuntu@52.0.24.103 'pg_dump -d echeckit_api_production -U echeckit > ~/dump.sql'
echo 'Done. Downloading to current folder...'
scp -i /home/pablo/.ssh/ubuntu.pem ubuntu@52.0.24.103:~/dump.sql db/dump.sql
echo 'Done. Deleting remote file...'
ssh -i /home/pablo/.ssh/ubuntu.pem ubuntu@52.0.24.103 'rm ~/dump.sql'
echo 'Done.'
