#!/bin/bash

echo 'Backing up to file...'
ssh -p 60 -i $HOME/.ssh/echeckit_production.pem ubuntu@52.3.170.85 'pg_dump -d echeckit_api_production > ~/dump.sql'
echo 'Done. Downloading to current folder...'
scp -p 60 -i $HOME/.ssh/echeckit_production.pem ubuntu@52.3.170.85:~/dump.sql db/dump.sql
echo 'Done. Deleting remote file...'
ssh -p 60 -i $HOME/.ssh/echeckit_production.pem ubuntu@52.3.170.85 'rm ~/dump.sql'
echo 'Done.'
